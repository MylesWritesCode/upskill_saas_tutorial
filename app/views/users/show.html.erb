<!--Show specific users based on user_id.-->

<div class="container-fluid">
  <div class="row">
    <div class="col-md-3 col-md-offset-1">
      <%= content_tag :h1, @user.profile.first_name, class: "small-margin" %>
      <%= content_tag :h1, @user.profile.last_name, class: "small-margin" %>
      <%= content_tag :h3, @user.profile.job_title, class: "small-margin" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 col-md-offset-1">
      Where does this text go?
    </div>
  </div>
  <% if current_user.plan_id == 2 %>
    <div class="row">
      <div class="col-md-3 col-md-offset-1">
        <!--Contact information for pro users.-->
        Here is some contact info if the user is a pro subscriber.
      </div>
    </div>
  <% end %>
</div>